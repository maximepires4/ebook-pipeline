# --- Pipeline Configuration ---
# Enable automatic conversion to KEPUB format
ENABLE_KEPUBIFY=True
# Enable renaming of files (Title - Author - Year)
ENABLE_RENAME=True
# If True, saves metadata without asking confirmation (Batch mode)
AUTO_SAVE=False

# --- Metadata Sources ---
# Choose providers: 'google', 'openlibrary', or 'all'
API_SOURCE=all
# Optional: Google Books API Key (increases search quota)
GOOGLE_API_KEY=

# --- Google Drive Upload ---
# Enable upload to Google Drive via API
ENABLE_DRIVE_UPLOAD=False
# ID of the destination folder on Google Drive
# (Extract from URL: drive.google.com/drive/folders/THIS_PART)
DRIVE_FOLDER_ID=

# Paths to OAuth2 credentials (default: root directory)
# Download 'credentials.json' from Google Cloud Console
GOOGLE_CREDENTIALS_PATH=credentials.json
# This file is generated automatically after first login
GOOGLE_TOKEN_PATH=token.json

# --- Legacy / Local Sync ---
# Alternative: Local path to copy files if API upload is disabled
# Useful for Dropbox, Syncthing, or mounted Drive
DRIVE_SYNC_FOLDER=

# --- Advanced Search ---
# Filter API results by the language of the EPUB (e.g. 'fr')
FILTER_BY_LANGUAGE=True
# Use Publisher name in search query
USE_PUBLISHER_IN_SEARCH=True
# Use Series name in search query
USE_SERIES_IN_SEARCH=True