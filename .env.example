# ==============================================
# Ebook Metadata Enricher - Configuration
# ==============================================

# --- KoboCloud Integration (Google Drive) ---
# Path to your local directory synced with Google Drive.
# This is where processed files (KEPUB) will be copied.
# If you are using KoboCloud, this should be the folder KoboCloud monitors.
# Example (Linux): /mnt/c/Users/Name/Google Drive/Kobo
# Example (Windows): C:\Users\Name\Google Drive\Kobo
DRIVE_SYNC_FOLDER=

# --- Pipeline Settings ---
# Enable/Disable specific steps of the pipeline
# Values: true / false
ENABLE_KEPUBIFY=true
ENABLE_RENAME=true
AUTO_SAVE=false

# --- API Sources ---
# Which API to use for metadata search?
# Values: all, google, openlibrary
API_SOURCE=all

# --- Search Parameters ---
# Include these fields in the search query for better precision?
USE_PUBLISHER_IN_SEARCH=true
USE_SERIES_IN_SEARCH=true
USE_YEAR_IN_SEARCH=true

# Filter results by the language of the EPUB file?
FILTER_BY_LANGUAGE=true

# --- Output & Display ---
# Show detailed output?
VERBOSE=false
# Show full JSON response from APIs?
FULL_OUTPUT=false
# Show truncated description in terminal?
SHOW_DESCRIPTION=true
