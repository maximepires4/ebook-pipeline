# ==============================================
# Ebook Metadata Enricher - Configuration Template
# Rename this file to .env to use it.
# ==============================================

# -----------------------------------------------------------------------------
# 1. GOOGLE DRIVE UPLOAD (KoboCloud Integration)
# -----------------------------------------------------------------------------
# Path to the OAuth2 Client Secret JSON (downloaded from Google Cloud Console)
GOOGLE_CREDENTIALS_PATH=credentials.json

# Path where the user token will be saved after the first login (auto-generated)
GOOGLE_TOKEN_PATH=token.json

# ID of the destination folder on Google Drive.
# If left empty, files will be uploaded to the root of your Drive.
# You can find the ID in the URL: drive.google.com/drive/folders/<THIS_ID>
DRIVE_FOLDER_ID=

# -----------------------------------------------------------------------------
# 2. PIPELINE BEHAVIOR
# -----------------------------------------------------------------------------
# Automatically convert EPUB to KEPUB (requires 'kepubify' binary)
ENABLE_KEPUBIFY=True

# Rename files to a standard format: "Title - Author - Year.epub"
ENABLE_RENAME=True

# Download and update the cover image if a better one is found online
UPDATE_COVER=True

# If True, automatically apply metadata changes when confidence is high (>80%)
# If False, you will always be prompted for confirmation (unless --auto is passed)
AUTO_SAVE=False

# -----------------------------------------------------------------------------
# 3. SEARCH STRATEGY
# -----------------------------------------------------------------------------
# Which APIs to query? Options: 'google', 'openlibrary', 'all'
API_SOURCE=all

# Filter API results to match the language of the source EPUB (e.g. 'fr', 'en')
# Highly recommended to reduce false positives.
FILTER_BY_LANGUAGE=True

# strictness of the text search (when ISBN fails):
# Include the publisher name in the search query?
USE_PUBLISHER_IN_SEARCH=True
# Include the publication year in the search query?
USE_YEAR_IN_SEARCH=True

# Optional: Google Books API Key (increases quota limits)
# GOOGLE_API_KEY=

# -----------------------------------------------------------------------------
# 4. DEBUG & LOGGING
# -----------------------------------------------------------------------------
# Show detailed logs (HTTP requests, search steps)
VERBOSE=False

# Dump full JSON responses from APIs to the console (for development)
FULL_OUTPUT=False